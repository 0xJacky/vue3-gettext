{
  "name": "@jshmrtn/vue3-gettext",
  "version": "0.1.0",
  "description": "Translate your Vue.js applications with gettext",
  "author": "Leo Zurbriggen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jshmrtn/vue3-gettext"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "bin": {
    "gettext-extract": "./scripts/gettext_extract.js",
    "gettext-compile": "./scripts/gettext_compile.js"
  },
  "scripts": {
    "start": "cd ./dev && vite",
    "build": "npm run build:esm && npm run build:commonjs",
    "build:esm": "tsc -m es2015 -d --lib \"DOM\",\"ES5\",\"es2020.symbol.wellknown\" --outDir dist/esm",
    "build:commonjs": "tsc -m commonjs --lib \"DOM\",\"ES5\",\"es2020.symbol.wellknown\" --outDir dist/commonjs",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint src dev",
    "test:unit": "jest",
    "test:jest2": "jest -i directive.spec.ts -t 'translates multiline strings as-is, preserving the original content'",
    "test:unit3": "jest -i directive.spec.ts --watch -t 'logs a warning in the console if an interpolation is required but an expression is not provided'",
    "dev:extract": "node ./scripts/gettext_extract.js",
    "dev:extract2": "make messages",
    "dev:compile": "node ./scripts/gettext_compile.js"
  },
  "engines": {
    "npm": ">= 3.0.0"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-beta.6",
    "date-fns": "^2.15.0",
    "easygettext": "github:Polyconseil/easygettext",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-html": "^1.6.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-standard": "^2.0.1",
    "jest": "^26.4.0",
    "json-loader": "^0.5.4",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7",
    "vite": "^1.0.0-rc.4",
    "vue": "^3.0.0",
    "vue-loader": "^10.3.0"
  },
  "main": "dist/cjs/index.js",
  "exports": {
    ".": {
      "require": "./dist/commonjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "types": "dist/esm/index.d.ts",
  "module": "./dist/esm/index.js",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "shelljs": "^0.8.4"
  }
}
